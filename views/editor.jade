extends layout
block content

  .col-lg-9#Buttons
    .btn-group.btn-group-justified
      .btn-group
        button.btn.btn-default#Zen
          i.glyphicon.glyphicon-eye-open
          span  Zen
      .btn-group
        button.btn.btn-success#Presentation
          i.glyphicon.glyphicon-play-circle
          span  Presentation
      .btn-group
        button.btn.btn-primary.dropdown-toggle(data-toggle="dropdown")
          i.glyphicon.glyphicon-download
          = ' Download '
          span.caret
        ul.dropdown-menu(role="menu")
          li
            a#MdSave
              i.glyphicon.glyphicon-floppy-save
              span  Download .md
          li
            a#HtmlSave
              i.glyphicon.glyphicon-save
              span  Download .html
      .btn-group
        button.btn.btn-info#Typewriter
          i.glyphicon.glyphicon-volume-down
          span  Typewriter
      .btn-group
        button.btn.btn-default#Prev
          i.glyphicon.glyphicon-backward
          span  Prev

      .btn-group
        button.btn.btn-inverse#Next
          i.glyphicon.glyphicon-forward
          span  Next
  .col-lg-3
    ul
      li
       small.text-right#Url="url=http://md.nikezono.net/"+page.uuid
      li
        small.text-right#Changed="changed:"+latest
      li
        small.text-right#Versions
          =page.date.length
          |  versions
      li
        small.text-right#TypeMode Typewriter=0


  .col-lg-12#Containers
    .col-lg-12#ZenView.fill
      .col-lg-6.fill
        h3 Markdown Editor
        .col-lg-12.fill
          .scroll#Inputview(contenteditable='true').fill
            if page.md
              != page.md
            else
              | this area is editable.
      .col-lg-6
        h3 HTML Preview
        .col-lg-12
          #Preview.scroll

